<view>
  <image class="logo" src="../../images/bookbox.jpg"></image>
  <image mode="aspectFit" class="title" src="../../images/title.png"></image>
  <form bindsubmit="formSubmit">
    <view class="m-login">
      <input class="login-inp" name='user' focus="true" placeholder-class="inp-place" type="number" maxlength="20"  placeholder="请输入手机号" />
      <input class="login-inp" name='password' placeholder-class="inp-place" password="true"  placeholder="密码" />
      <button class="login-btn" loading="{{load}}" formType="submit">绑定</button>
    </view>
  </form>
</view>